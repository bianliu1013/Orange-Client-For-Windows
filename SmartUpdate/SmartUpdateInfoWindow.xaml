<Window x:Class="SmartUpdate.SmartUpdateInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartUpdateInfoWindow" Height="300" Width="300">
    <Grid>
        <RichTextBox Name="txtDescription" HorizontalAlignment="Left" Height="100" Margin="10,115,0,0" VerticalAlignment="Top" Width="100">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Name="closeBtn" Content="Button" HorizontalAlignment="Left" Margin="107,238,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.507,0.545" Click="closeBtn_Click"/>
        <Label Name="lblVersions" Content="Label" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
